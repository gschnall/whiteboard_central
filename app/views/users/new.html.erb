<h1>Create Your Account</h1>
<%= form_for @user do |f| %>
  <hr>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %> <br><br>
  <%= f.label :email, 'Email' %>
  <%= f.text_field :email %> <br><br>
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %> <br><br>
  <%= f.label :about, 'About me' %>
  <%= f.text_area :about %> <br><br>
  <hr>
  <%= f.submit %>
<% end %>

