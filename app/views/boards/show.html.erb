<div style="overflow: auto" id="float-form">
  <button class="index_profile_button"><%= link_to 'My Profile', users_path + "/" + current_user.id.to_s %><div class="fa fa-lg fa-child"></div></button>
  <button style="width:290px; color:darkgreen" class="index_profile_button"><%= link_to 'Recent Public Boards', public_boards_path %><div class="fa fa-lg fa-file-picture-o"></div></button>
  <h1>Recent Public Boards</h1>
  <hr>
  <%= form_tag(search_boards_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Boards", style:"font-size:20px;" %>
    <button id="index_search_button" type="submit"><i class="fa fa-lg fa-search"></i></button>
  <% end %><hr>

<% @boards.reverse.each do |b| %>
  <% if b.private == false and !(b.title.to_s == "") %>
  <div class="user">
    <%= image_tag b.title.to_s, id: 'index_img_view' %><br>
            <button class="index_button"><a class="btn btn-md btn-primary" href=<%= '/boards/'+ b.id.to_s + '/edit' %>>Edit Board <div class="fa fa-lg fa-paint-brush"></div></a></button><br></br>
  </div>
  <hr>
  <% end %>
<% end %>
</div>
